doctype html 
html 
  head 
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    block title
    link(rel="stylesheet" href="assets/css/style.css")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css")
  body

    //Header
    header.header
      .container
        .header__wrap
          button.header__button-menu
            i.fa-solid.fa-bars
          .header__logo
            a(href="index.html")
              img(alt="Monito" src="assets/images/Frame.svg")
          nav.header__menu
            ul
              li
                a(href="#") Trang chủ
              li
                a(href="#") Danh mục
              li
                a(href="#") Giới thiệu
              li
                a(href="#") Liên hệ
          button.header__button-search
            i.fa-solid.fa-magnifying-glass
          form.header__search
            i.fa-solid.fa-magnifying-glass
            input(
              placeholder="Nhập từ khóa..." 
              type="text"
              )
          a(href="#" class="button") Tham gia cộng đồng
    //End Header

    block main
    
    // Footer
    footer
      .footer
        .container
          .footer__wrap
            .footer__top
              .footer__register-content Đăng ký ngay để không bỏ lỡ các chương trình của chúng tôi
              .footer__register-form
                form(action="")
                  input(
                    placeholder="Nhập email của bạn..." 
                    type="email"
                    )
                  button Đăng Ký Ngay
            nav.footer__middle
              ul.footer__redirect
                li
                  a(href="#") Trang Chủ
                li
                  a(href="#") Danh Mục
                li
                  a(href="#") Giới Thiệu
                li
                  a(href="#") Liên Hệ
              ul.footer__social-media
                li
                  a(href="#")
                    i.fa-brands.fa-facebook
                li
                  a(href="#")
                    i.fa-brands.fa-x-twitter
                li
                  a(href="#")
                    i.fa-brands.fa-instagram
                li
                  a(href="#")
                    i.fa-brands.fa-youtube
            .footer__down
              .footer__rights-reserved © All rights reserved.
              .footer__logo
                a(href="index.html")
                  img(
                    alt="" 
                    src="assets/images/Frame (1).svg"
                    )
              ul.footer__links
                li
                  a(href="#") Điều khoản dịch vụ
                li
                  a(href="#") Chính sách bảo mật
    // End footer
